<script>
require(["dojo/ready"], function(ready){
	ready(function(){
		<?php if($this->row['is_morethen']==1){?>
		CheckIsMore();
		<?php }?>
	});
});

function CheckIsMore(){
	if(dijit.byId('is_morethan').checked){
		dijit.byId('from_amount').attr('value',0);
		dijit.byId('from_amount').set('readOnly',true);
		dijit.byId('to_amount').attr('value',0);
		dijit.byId('to_amount').set('readOnly',true);
		dijit.byId('morethan_amount').set('readOnly',false);
		}else{
			dijit.byId('from_amount').set('readOnly',false);
			dijit.byId('to_amount').set('readOnly',false);
			dijit.byId('morethan_amount').attr('value',0);
			dijit.byId('morethan_amount').set('readOnly',true);
		}
}
</script>